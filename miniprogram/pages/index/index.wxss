page {
  background: #f3f7f7;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}

.select_box {
  background: #fff;
  width: 80%;
  margin: 0rpx auto;
  /* position: relative;  */
  position: fixed;
  top: 10px;
  display: inline-block;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 30rpx;
  flex: ;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 70rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 50px;
  overflow-y: auto;
  border-top: 50px;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.nextBtn {
  margin: auto;
  margin-top: 300rpx;
  width: 350rpx;
}

.center-text {
  height: 200px;
  top: 10rpx;
  padding-top: 90px;
  margin-top: 10px;
  justify-content: center;
  align-items: center;
  display: flex;
}

.imgSize {
  width: 30%;
  height: 30rpx;
  top: 200rpx;
}

.img {
  top: 30rpx;
  margin-left: 20rpx;
  width: 200rpx;
  height: 200rpx;
  justify-content: center;
  position: absolute;
}

.notice {
  position: fixed;
  text-align: center;
  bottom: 30rpx;
  left: 0;
  right: 0;
}
